<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/duration"
                android:textSize="24sp"
                android:textColor="@color/c3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
                android:text="@string/unLockCountLabel"
                android:layout_marginEnd="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/unLockCount"
                android:id="@+id/unLockCountLabel" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/unLockCount" />

        <TextView
                android:text="@string/completeTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/completeTimeLabel"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5sp"
                app:layout_constraintTop_toBottomOf="@+id/unLockCountLabel"
                app:layout_constraintEnd_toStartOf="@+id/completeTime"
                app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/completeTime"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/unLockCount" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>